        <textarea
            name="blacklist"
            id="blacklist"
            rows="6"
            cols="50"
            placeholder="<?php echo _t('ext.filter_title.keywords_placeholder'); ?>"
        ><?php echo htmlspecialchars($this->getBlacklistData(), ENT_QUOTES, 'UTF-8'); ?></textarea>
